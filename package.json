{
  "name": "zacatzontli",
  "version": "1.0.0",
  "description": "An open source lightweight authentication manager API",
  "main": "index.js",
  "scripts": {
    "postinstall": "./node_modules/.bin/apidoc -i ./app -o ./public",
    "start": "node index.js",
    "server": "nodemon index.js",
    "test": "node_modules/.bin/mocha ./app/**/*.spec.js",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --check-leaks --timeout 30000 --reporter spec ./app/**/*.spec.js"
  },
  "bin": {
    "codacy-coverage": "./bin/codacy-coverage.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/murilocosta/zacatzontli.git"
  },
  "keywords": [
    "authentication",
    "authorization",
    "application",
    "jwt",
    "user"
  ],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/murilocosta/zacatzontli/issues"
  },
  "homepage": "https://github.com/murilocosta/zacatzontli#readme",
  "dependencies": {
    "apidoc": "~0.17.5",
    "bcrypt": "~3.0.3",
    "bluebird": "~3.5.1",
    "body-parser": "~1.18.2",
    "cors": "~2.8.4",
    "express": "~4.16.2",
    "jsonwebtoken": "~8.1.0",
    "mongoose": "~4.13.5",
    "passport": "~0.4.0",
    "passport-jwt": "~3.0.1"
  },
  "devDependencies": {
    "chai": "~4.1.2",
    "chai-http": "~3.0.0",
    "codacy-coverage": "^2.0.3",
    "mocha": "~4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "~1.12.1"
  },
  "apidoc": {
    "title": "Zacatzontli",
    "url": "https://zacatzontli.herokuapp.com/api"
  }
}
