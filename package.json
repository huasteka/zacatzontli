{
  "name": "zacatzontli",
  "version": "2.0.0",
  "description": "An open source lightweight authentication manager API",
  "keywords": [
    "authentication",
    "authorization",
    "application",
    "jwt",
    "user"
  ],
  "dependencies": {
    "@sailshq/lodash": "~3.10.3",
    "apidoc": "~0.27.1",
    "bcrypt": "~5.0.1",
    "jsonwebtoken": "~8.5.1",
    "passport": "~0.4.1",
    "passport-jwt": "~4.0.0",
    "sails": "~1.4.2",
    "sails-hook-orm": "~3.0.2",
    "sails-hook-sockets": "~2.0.0",
    "sails-postgresql": "~2.0.0",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "chai": "~4.3.4",
    "chai-http": "~4.3.0",
    "codacy-coverage": "~3.4.0",
    "eslint": "5.16.0",
    "mocha": "~8.4.0",
    "mocha-lcov-reporter": "~1.3.0"
  },
  "bin": {
    "codacy-coverage": "./bin/codacy-coverage.js"
  },
  "scripts": {
    "postinstall": "./node_modules/.bin/apidoc -i ./api -o ./assets",
    "start": "node app.js",
    "test": "npm run lint && npm run custom-tests && echo 'Done.'",
    "lint": "node ./node_modules/eslint/bin/eslint.js . --max-warnings=0 --report-unused-disable-directives && echo 'âœ”  Your .js files look good.'",
    "custom-tests": "./node_modules/.bin/mocha test/**/*.spec.js",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --timeout 30000 --reporter spec ./test/**/*.spec.js"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/murilocosta/zacatzontli.git"
  },
  "bugs": {
    "url": "https://github.com/murilocosta/zacatzontli/issues"
  },
  "apidoc": {
    "title": "Zacatzontli",
    "url": "https://zacatzontli.herokuapp.com/api"
  },
  "license": "GPL-3.0-only",
  "engines": {
    "node": "~14.16"
  }
}
